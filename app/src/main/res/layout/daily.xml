<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_recycler">


    <TextView
        android:id="@+id/txv_date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="วันที่"
        android:textColor="#000000"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="45dp" />

    <TextView
        android:id="@+id/txv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="00-00/0000"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/txv_date_title"
        app:layout_constraintTop_toTopOf="@+id/txv_date_title" />

    <TextView
        android:id="@+id/txv_memo"
        android:layout_width="279dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:singleLine="false"
        android:text=""
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="76dp" />

    <TextView
        android:id="@+id/txv_remark_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:text="หัวข้อการจอง"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txv_memo" />

    <TextView
        android:id="@+id/txv_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/txv_remark_title"
        app:layout_constraintTop_toTopOf="@+id/txv_remark_title" />

</androidx.constraintlayout.widget.ConstraintLayout>